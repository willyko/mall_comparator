<div id="main-container" class="container-fluid">
  <h1> Mall Comparator </h1>
  <div class='row'>
    <div class='col-md-6'>
      <h2>
        <input type="text" id="filter-list" class="form-control" placeholder="Filter..."/>
      </h2>
    </div>
    <div class='col-md-5'>
      <h2>
      <button id='btn-compare' class="btn btn-primary" type="submit">Compare</button>
      <button id='btn-contra' class="btn btn-info" type="submit">Contrast</button>
      <button id='btn-reset' class="btn btn-warning" type="submit">Reset</button>
    </h2>
    </div>
    <div class='col-md-1'>
     </div>
  </div>
  <div id='mall1' class='list-block col-md-6'>
    <%= render partial: "/malls/mall", locals: {mall: @mall1, block_id: 1} %>
  </div>

  <div id='mall2' class='list-block col-md-6'>
    <%= render partial: "/malls/mall", locals: {mall: @mall2, block_id: 2} %>
  </div>
</div>
